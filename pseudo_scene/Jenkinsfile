pipeline {
    agent any
	
tools {
	  'org.jenkinsci.plugins.docker.commons.tools.DockerTool' 'docker'
}
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Define the Dockerfile location
                    def dockerfilePath = 'project_upprpo/Dockerfile'

                    // Build the Docker image using the Dockerfile
                    def dockerImage = docker.build('maven:3.8.4-openjdk-19', '-f ' + dockerfilePath + ' .')

                    // Push the Docker image to a registry (optional)
                    dockerImage.push('maven:3.8.4-openjdk-19:latest')
                }
            }
        }
    }

    post {
        success {
            echo 'Docker image built successfully'
        }
        failure {
            echo 'Failed to build Docker image'
        }
    }
}

