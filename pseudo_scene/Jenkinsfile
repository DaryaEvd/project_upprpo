pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Define the Dockerfile location
                    def dockerfilePath = 'pseudo_scene/Dockerfile'

                    // Build the Docker image using the Dockerfile
                    def dockerImage = docker.build('my-docker-image', '-f ' + dockerfilePath + ' .')

                    // Push the Docker image to a registry (optional)
                    dockerImage.push('my-docker-image:latest')
                }
            }
        }
    }

    post {
        success {
            echo 'Docker image built successfully'
        }
        failure {
            echo 'Failed to build Docker image'
        }
    }
}

